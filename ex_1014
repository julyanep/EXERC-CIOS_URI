using System;
using System.Globalization;

class Program {
    static void Main(string[] args) {
		int x;
		double y, distancia;

		x = int.Parse(Console.ReadLine());
		y = double.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);

		distancia = x / y;

		Console.WriteLine(distancia.ToString("F3", CultureInfo.InvariantCulture) + " km / l");

		Console.ReadLine();
    }
}
